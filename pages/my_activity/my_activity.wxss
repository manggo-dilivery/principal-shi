/* pages/my_activity/my_activity.wxss */
page{
  background: #eee;
}
.container {
  width: 100%;
  height: auto;
}

.list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top:10rpx;
}

.item {
  display: flex;
}

.item image {
  width: 150rpx;
  height: 150rpx;
}

.item3 image {
  width: 30rpx;
  height: 30rpx;
}

.item3 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #ddd;
  padding: 15rpx 0;
}
.item3 view text{
 line-height:10rpx;
}
.item1 {
  margin-left: 20rpx;
  position: relative;
}

.item2 {
  width: 530rpx;
  margin-left: 20rpx;
}

.item2 view:nth-child(2) {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.item2 view:nth-child(2) text {
  color: #ffb067;
}

.item2 view:nth-child(1) text:first-child {
  font-size: 34rpx;
}

.item2 view:nth-child(3) text:first-child {
  font-size: 25rpx;
}

.item3 text {
  display: inline-block;
}

.see_immediately {
  position: absolute;
  top: 0;
  left: 0;
  width: 150rpx;
  height: 150;
  text-align: center;
  line-height: 150rpx;
  background: rgba(0, 0, 0, 0.4);
}

.see_immediately text {
  color: #fff;
  padding: 2rpx 15rpx;
  background: #ffa200;
  border-radius: 10rpx;
  width: 130rpx;
  height: 50rpx;
  font-size: 25rpx;
}
.border{
  padding: 5rpx 15rpx;
  border:1rpx solid #ffa200;
  border-radius:5rpx;
}