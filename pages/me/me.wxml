    </view>

</view>


<!--底部tabbar  -->
<view class='bottom_tabbar'>
  <view bindtap='home'>
    <image src='../../icon/home.png'></image>
    <text>首页</text>
  </view>
  <view bindtap='join_info'>
    <view class='business-enter'><image class='bottom_tabbar_plus' src='../../icon/plus.png'></image></view>
    <text style='font-size:25rpx;'>入驻</text>
  </view>
  <view bindtap='center'>
    <image src='../../icon/me_active.png'></image>
    <text class='active'>我的</text>
  </view>
</view>
