/**index.wxss**/
/* pages/mine/mine.wxss */
page{
  background: #eee;
}

/*顶部图片  */

.top{
  width:100%;
  height:400rpx;
  position:realative;
  background: #30b5fa;
}
.top-image{
  width:100%;
  height:60rpx;
  position: absolute;
  top:340rpx;
}
.top-image image{
  width:100%;
  height:60rpx;
}

.top-detail{
  width:100%;
  height:250rpx;
  position: absolute;
  top:0;
  left:0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:50rpx;
}
.top-detail text{
  font-size:34rpx;
  margin-top:20rpx;
  color:#fff;
}
.portrait{
  width:150rpx;
  height:150rpx;
  border-radius:75rpx;
  box-shadow:0 0 0 8rpx #67c6f8;
}
.icon{
  width:60rpx;
  height:60rpx;
  margin-left:350rpx;
}
/*列表  */

.list{
  width:100%;
  height:auto;
}
.item{
  width:100%;
  height:90rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.item-text{
  width:100%;
  height:90rpx;
  display: flex;
  align-items: center;
}
.item-text image{
  width:40rpx;
  height:40rpx;
  margin-left:30rpx;
}
.item-text text{
  font-size:30rpx;
  margin-left:20rpx;
}

.item-icon image{
  width:40rpx;
  height:40rpx;
  margin-right:30rpx;
}


/*底部tabbar样式  */

.bottom_tabbar{
  width:100%;
  height:90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  position: fixed;
  bottom:0;
  left:0;
}
.bottom_tabbar view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.bottom_tabbar image{
  width:45rpx;
  height:45rpx;
}
.business-enter{
  width:47rpx;
  height:47rpx;
}
.bottom_tabbar_plus{
  position:absolute;
  width:75rpx !important;
  height:75rpx !important;
  top:-30rpx;
}
.active{
  color:#fe9e4a;
}