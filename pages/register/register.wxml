<!--pages/register/register.wxml-->
<view class='list'>
  <form>
    <view class='item'>
      <text>手机号</text>
      <input type='text' name='banner' placeholder='请输入手机号'></input>
    </view>
    <view class='item'>
      <text>验证码</text>
      <input type='text' name='banner' placeholder='请输入验证码'></input>
      <view class='test'>获取验证码</view>
    </view>
    <view class='item'>
      <text decode='true'>密&nbsp;&nbsp;&nbsp;码</text>
      <input type='text' name='banner' placeholder='请输入新密码'></input>
    </view>
   
  
  <button type='submit' class='btn'>注册</button>
  <view class='no-account' bindtap='log_in'>
    <text>已有账号？请直接登录</text>
  </view>
  </form>
</view>


<!--底部tabbar  -->
<view class='bottom_tabbar'>
  <view bindtap='home'>
    <image src='../../icon/home.png'></image>
    <text>首页</text>
  </view>
  <view bindtap='join_info'>
    <view class='business-enter'><image class='bottom_tabbar_plus' src='../../icon/plus.png'></image></view>
    <text style='font-size:25rpx;'>入驻</text>
  </view>
  <view bindtap='center'>
    <image src='../../icon/me_active.png'></image>
    <text class='active'>我的</text>
  </view>
</view>
